<div class="lost-tiles">
    @foreach (var point in Config.WordToFind.ToUpper())
    {
        <div class="lost-tile" style="background-color: var(--correct);">
            <span style="color: var(--correct-text);">@point</span>
        </div>
    }
</div>
<div class="flex justify-end gap-2 mt-4">
    <button type="button" class="lost-btn py-2 px-6 rounded font-semibold" @onclick="Submit">Replay</button>
</div>

@code {
    [Parameter] public EventCallback OnClose { get; set; }
    [Inject] public NavigationManager? Nav { get; set; }

    private async Task Submit()
    {
        await OnClose.InvokeAsync();
        Nav?.NavigateTo("", true);
    }
}
